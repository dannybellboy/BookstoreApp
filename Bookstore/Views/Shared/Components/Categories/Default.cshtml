@{
}

@model IEnumerable<string>


<div class="d-grid gap-2" style="font-size: 14px!important">
    <a asp-controller="Home" asp-action="Index" asp-route-Category="" asp-route-pageNum="1" class="btn btn-secondary" style="font-size: medium">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-Category="@c" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-secondary")" style="font-size: medium">@c</a>
    }
</div>